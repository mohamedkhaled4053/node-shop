<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/error-msgs.ejs') %>
        <form class="product-form" action="<%= edit?`/admin/edit-product/${product._id}`:`/admin/add-product` %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= edit? product.title:oldInput?oldInput.title:'' %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= edit? product.imageUrl:oldInput?oldInput.imageUrl:'' %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= edit? product.price:oldInput?oldInput.price:'' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= edit? product.description:oldInput?oldInput.description:'' %></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button class="btn" type="submit"><%= edit ? 'Update Product':'Add Product'  %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>